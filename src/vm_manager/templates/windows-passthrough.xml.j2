<?xml version="1.0" encoding="UTF-8"?>
<!--
  NeuronOS Windows VM Template - GPU Passthrough
  
  For VMs with dedicated GPU for gaming/professional applications.
  Uses Looking Glass for display output.
-->
<domain type='kvm'>
  <name>{{ name }}</name>
  <uuid>{{ uuid }}</uuid>
  <memory unit='MiB'>{{ memory_mb }}</memory>
  <currentMemory unit='MiB'>{{ memory_mb }}</currentMemory>
  <vcpu placement='static'>{{ vcpus }}</vcpu>
  
  <os>
    <type arch='x86_64' machine='pc-q35-8.0'>hvm</type>
    <loader readonly='yes' type='pflash'>/usr/share/edk2-ovmf/x64/OVMF_CODE.fd</loader>
    <nvram>/var/lib/libvirt/qemu/nvram/{{ name }}_VARS.fd</nvram>
    {% if iso_path %}
    <boot dev='cdrom'/>
    {% endif %}
    <boot dev='hd'/>
  </os>
  
  <features>
    <acpi/>
    <apic/>
    <hyperv mode='passthrough'>
      <relaxed state='on'/>
      <vapic state='on'/>
      <spinlocks state='on' retries='8191'/>
      <vpindex state='on'/>
      <synic state='on'/>
      <stimer state='on'/>
      <reset state='on'/>
      <vendor_id state='on' value='NeuronOS'/>
      <frequencies state='on'/>
    </hyperv>
    <kvm>
      <hidden state='on'/>
    </kvm>
    <vmport state='off'/>
  </features>
  
  <cpu mode='host-passthrough' check='none' migratable='on'>
    <topology sockets='1' dies='1' cores='{{ vcpus }}' threads='1'/>
    <feature policy='require' name='topoext'/>
  </cpu>
  
  <clock offset='localtime'>
    <timer name='rtc' tickpolicy='catchup'/>
    <timer name='pit' tickpolicy='delay'/>
    <timer name='hpet' present='no'/>
    <timer name='hypervclock' present='yes'/>
  </clock>
  
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>destroy</on_crash>
  
  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>
    
    <!-- Primary Disk -->
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2' discard='unmap'/>
      <source file='{{ disk_path }}'/>
      <target dev='vda' bus='virtio'/>
    </disk>
    
    {% if iso_path %}
    <!-- Installation ISO -->
    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <source file='{{ iso_path }}'/>
      <target dev='sda' bus='sata'/>
      <readonly/>
    </disk>
    {% endif %}
    
    <!-- Network -->
    <interface type='network'>
      <source network='default'/>
      <model type='virtio'/>
    </interface>
    
    {% if gpu_passthrough %}
    <!-- Passthrough GPU -->
    <hostdev mode='subsystem' type='pci' managed='yes'>
      <source>
        <address domain='0x0000' bus='{{ gpu_passthrough.bus }}' slot='{{ gpu_passthrough.slot }}' function='{{ gpu_passthrough.function }}'/>
      </source>
      <rom bar='on'/>
    </hostdev>
    
    {% if gpu_audio %}
    <!-- GPU Audio (HDMI) -->
    <hostdev mode='subsystem' type='pci' managed='yes'>
      <source>
        <address domain='0x0000' bus='{{ gpu_audio.bus }}' slot='{{ gpu_audio.slot }}' function='{{ gpu_audio.function }}'/>
      </source>
    </hostdev>
    {% endif %}
    {% endif %}
    
    {% if looking_glass %}
    <!-- Looking Glass IVSHMEM -->
    <shmem name='looking-glass'>
      <model type='ivshmem-plain'/>
      <size unit='M'>{{ looking_glass.shm_size_mb }}</size>
    </shmem>
    {% endif %}
    
    <!-- Dummy video for Looking Glass -->
    <graphics type='spice' autoport='yes'>
      <listen type='none'/>
      <gl enable='no'/>
    </graphics>
    <video>
      <model type='none'/>
    </video>
    
    <!-- Input (evdev for low latency) -->
    <input type='evdev'>
      <source dev='/dev/input/by-id/usb-keyboard'/>
    </input>
    <input type='evdev'>
      <source dev='/dev/input/by-id/usb-mouse' grab='all' repeat='on'/>
    </input>
    
    <!-- Guest Agent Channel -->
    <channel type='unix'>
      <target type='virtio' name='org.qemu.guest_agent.0'/>
    </channel>
    
    <!-- USB -->
    <controller type='usb' model='qemu-xhci' ports='15'/>
  </devices>
</domain>
