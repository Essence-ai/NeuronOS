#!/usr/bin/env python3
"""
NeuronStore - Application Store for NeuronOS
"""
import sys
sys.path.insert(0, '/usr/lib/neuron-os')

def main():
    try:
        from store.gui.store_window_qt import main as qt_main
        return qt_main()
    except Exception as e:
        print(f"Error launching NeuronStore: {e}")
        print("\nTry running from terminal to see full error:")
        print("  neuron-store")
        return 1

if __name__ == '__main__':
    sys.exit(main())
