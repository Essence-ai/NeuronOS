#!/usr/bin/env python3
"""
NeuronVM Manager - VM Management for NeuronOS
"""
import sys
sys.path.insert(0, '/usr/lib/neuron-os')

def main():
    try:
        from vm_manager.gui.app_qt import main as qt_main
        return qt_main()
    except Exception as e:
        print(f"Error launching NeuronVM Manager: {e}")
        print("\nTry running from terminal to see full error:")
        print("  neuron-vm-manager")
        print("\nMake sure libvirtd is running:")
        print("  sudo systemctl start libvirtd")
        return 1

if __name__ == '__main__':
    sys.exit(main())
